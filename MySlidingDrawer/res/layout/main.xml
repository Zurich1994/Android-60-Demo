<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<SlidingDrawer android:id="@+id/sliding"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="#FA8072" android:handle="@+id/handle"
		android:orientation="vertical" android:content="@+id/content">
		<Button android:text="点击我" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/handle" />
		<LinearLayout android:id="@+id/content" android:background="#7B68EE"
			android:layout_width="fill_parent" android:layout_height="fill_parent">
			<TextView android:id="@+id/text" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="我的抽屉类" />
		</LinearLayout>
	</SlidingDrawer>
</LinearLayout>
